/* To learn more about this file see: https://angular.dev/configs/workspace-config#alternate-build-configurations */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node",
      "webpack-env"  // Addition: Includes Webpack types for require.context in test entry point
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}