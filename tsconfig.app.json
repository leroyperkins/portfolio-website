/* To learn more about this file see: https://angular.dev/configs/workspace-config#alternate-build-configurations */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"  // Addition: Includes Node.js types for process.env and resolves module declarations in test files
    ]
  },
  "files": [
    "src/main.ts",
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}